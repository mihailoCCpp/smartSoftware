                                                                                            <RowDefinition Height="Auto"/>
                                                                                            <RowDefinition Height="Auto"/>
                                                                                            <RowDefinition Height="Auto"/>
                                                                                            <RowDefinition Height="Auto"/>
                                                                                        </Grid.RowDefinitions>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="Auto"/>
                                                                                            <ColumnDefinition Width="Auto"/>
                                                                                        </Grid.ColumnDefinitions>


                                                                                        <Label Grid.Row="0" Grid.Column="0" FontSize="10"  HorizontalAlignment="Left" FontWeight="Bold" FontStyle="Normal" Width="160"  Content="Količina :" HorizontalContentAlignment="Left"/>
