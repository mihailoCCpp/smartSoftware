                                                                                        <Label Grid.Row="1" Grid.Column="0" FontSize="10"  HorizontalAlignment="Left" FontWeight="Bold" FontStyle="Normal" Width="160"  Content="Iskorišćen broj popust poena :" HorizontalContentAlignment="Left" />
                                                                                        <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="Auto" Text="{Binding Broj_iskoriscenih_popust_poena}" />

                                                                                        <Label Grid.Row="2" Grid.Column="0"  FontSize="10"  HorizontalAlignment="Left" FontWeight="Bold" FontStyle="Normal" Width="160"  Content="Oprema je bila na popustu od :" HorizontalContentAlignment="Left"/>
