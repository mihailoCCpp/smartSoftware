                                                                                        <Label Grid.Row="3" Grid.Column="0" FontSize="10"  HorizontalAlignment="Left" FontWeight="Bold" FontStyle="Normal" Width="160"  Content="Oprema prodata po ceni :" HorizontalContentAlignment="Left"/>
                                                                                        <TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Width="Auto" Text="{Binding cena_opreme_kad_je_prodata}" />
                                                                                    </Grid>

                                                                                </Grid>

                                                                                <StackPanel Orientation="Vertical" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Stretch">
